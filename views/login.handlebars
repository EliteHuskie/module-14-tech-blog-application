<div class="row">
    <div class="col-md-6">
        <h2 class="mb-4">Login</h2>

        <form class="form login-form">
            <div class="mb-3">
                <label for="email-login" class="form-label">Email:</label>
                <input class="form-control" type="text" id="email-login" />
            </div>
            <div class="mb-3">
                <label for="password-login" class="form-label">Password:</label>
                <input class="form-control" type="password" id="password-login" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2 class="mb-4">Sign-up</h2>

        <form class="form signup-form">
            <div class="mb-3">
                <label for="name-signup" class="form-label">Name:</label>
                <input class="form-control" type="text" id="name-signup" />
            </div>
            <div class="mb-3">
                <label for="email-signup" class="form-label">Email:</label>
                <input class="form-control" type="text" id="email-signup" />
            </div>
            <div class="mb-3">
                <label for="password-signup" class="form-label">Password:</label>
                <input class="form-control" type="password" id="password-signup" />
            </div>
            <div class="mb-3">
                <label for="confirm-password" class="form-label">Confirm Password:</label>
                <input class="form-control" type="password" id="confirm-password" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Sign-up</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>